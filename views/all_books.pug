extends layout

block content
    h1 Books
    include partials/_new_book_button
    include partials/_book_filter
    include partials/_booksearch

    table
      thead
        tr
          th Title
          th Author
          th Genre
          th Year Released
      tbody
        each book in books
            tr
              td
                a(href='/books/book_detail/' + book.id) #{book.title}
              td #{book.author}
              td #{book.genre}
              td #{book.first_published}
    hr
    if books.length >= 10
      include partials/_bookpaginator
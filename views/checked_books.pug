extends layout

block content
    h1 Checked Out Books
    include partials/_new_book_button
    include partials/_book_filter
    table
      thead
        tr
          th Title
          th Author
          th Genre
          th Year Released
      tbody
        each loan in loans
          tr
            td
              a(href='book_detail/' + loan.book.id) #{loan.book.title}
              td #{loan.book.author}
              td #{loan.book.genre}
              td #{loan.book.first_published}
extends layout

block content
    h1 Patron: Return Book
    p
      strong Book Title:
      |  #{loan[0].book.title}
    p
      strong Loaned By:
      |  #{loan[0].patron.fullName()}
    p
      strong Loaned On:
      |  #{loan[0].loaned_on}
    p
      strong Return By:
      |  #{loan[0].return_by}
    form(method='post', action='/loans/return_book/' + loan[0].id + '?_method=PUT')
      p
        label(for='returned_on') Returned on:
        input#returned_on(type='text', name='returned_on', value=returned_on)
      p
        input(type='submit', value='Return Book')